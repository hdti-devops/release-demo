{
  "separate-pull-requests": true,
  "sequential-calls": true,
  "skip-github-release": false,
  "packages": {
    "charts/argocd": {
        "release-type": "helm",
        "package-name": "argocd"
    },
    "charts/ingress-nginx": {
        "release-type": "helm",
        "package-name": "ingress-nginx"
    },
    "charts/nginx-oci": {
      "release-type": "simple",
      "package-name": "nginx-oci",
      "version-file": "version.txt", 
      "include-paths": [
        "oci-base/**/nginx-oci/**",
        "clusters/**/nginx-oci/**",
        "charts/nginx-oci/**"
      ]
    }
  }
}