{
  "separate-pull-requests": true,
  "sequential-calls": true,
  "release-type": "helm",
  "skip-github-release": false,
  "packages": {
    "charts/argocd": {
        "package-name": "argocd"
    },
    "charts/ingress-nginx": {
        "package-name": "ingress-nginx"
    },
    "charts/nginx-oci": {
        "release-type": "simple",
        "package-name": "nginx-oci",
        "include-paths": [
          "../../oci-base/dev/nginx-oci/kustomization.yaml",
          "../../../oci-base/qa/nginx-oci/kustomization.yaml",
          "oci-base/prod/nginx-oci/kustomization.yaml",
          "clusters/*/nginx-oci/**"
        ]
    }
  }
}