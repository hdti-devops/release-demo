{
  "separate-pull-requests": true,
  "sequential-calls": true,
  "release-type": "helm",
  "skip-github-release": false,
  "packages": {
    "charts/argocd": {
        "package-name": "argocd"
    },
    "charts/ingress-nginx": {
        "package-name": "ingress-nginx"
    },
    "charts/nginx-oci": {
        "release-type": "simple",
        "package-name": "nginx-oci",
        "extra-files": [
          "clusters/*/nginx-oci/**",
          "oci-base/*/nginx-oci/kustomization.yaml"
        ]
    }
  }
}