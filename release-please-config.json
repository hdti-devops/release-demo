{
  "separate-pull-requests": true,
  "sequential-calls": true,
  "skip-github-release": false,
  "packages": {
    "charts/argocd": {
        "release-type": "helm",
        "package-name": "argocd"
    },
    "charts/ingress-nginx": {
        "release-type": "helm",
        "package-name": "ingress-nginx"
    },
    "charts/nginx-oci": {
      "release-type": "simple",
      "package-name": "nginx-oci",
      "include-paths": [
        "oci-base/dev/nginx-oci",
        "oci-base/qa/nginx-oci",
        "oci-base/prod/nginx-oci",
        "clusters/dev/nginx-oci",
        "clusters/qa/nginx-oci",
        "clusters/prod/nginx-oci"
      ]
    }
  }
}